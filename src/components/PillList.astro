---
interface Props {
  title: string;
  items: string[];
}

const { title, items } = Astro.props;
---

<div>
  <h4 class="divider">
    {title}
  </h4>

  <ul class="flex flex-wrap gap-3 mt-3">
    {items.map((item) => (
      <li class="bg-secondary text-secondary-content py-2 px-3 rounded-badge">
        {item}
      </li>
    ))}
  </ul>
</div>
