---
import { t } from 'astro-i18n';
import type { OperatingTime } from '../content/config';

interface Props {
  operatingTimes: Record<string, OperatingTime[]>;
}

const { operatingTimes } = Astro.props;
---

<div>
  <h3 class="divider">
    {t('Hours')}
  </h3>

  <table class="table">
    <tbody>
    {Object.keys(operatingTimes).map((day: string) => (
      <tr>
        <th class="align-text-top">
          {t(`days.${day}`)}
        </th>

        <td>
          <ul>
            {operatingTimes[day].map((time: OperatingTime) => (
              <li>
                {time.openTime} - {time.closeTime}
              </li>
            ))}
          </ul>
        </td>
      </tr>
    ))}
    </tbody>
  </table>
</div>
